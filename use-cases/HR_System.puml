actor Manager as "Department Manager"

rectangle "HR System" {
  usecase UC1 as "Salary Report - All"
  usecase UC2 as "Salary Report - Department"
  usecase UC3 as "Salary Report - My Department"
  usecase UC4 as "Salary Report - By Role"
  usecase UC5 as "Add New Employee"
  usecase UC6 as "View Employee"
  usecase UC7 as "Update Employee"
  usecase UC8 as "Delete Employee"

  HR --> UC1
  HR --> UC2
  Manager --> UC3
  HR --> UC4
  HR --> UC5
  HR --> UC6
  HR --> UC7
  HR --> UC8

  rectangle Database
  UC1 - Database
  UC2 - Database
  UC3 - Database
  UC4 - Database
  UC5 - Database
  UC6 - Database
  UC7 - Database
  UC8 - Database
}
@enduml
